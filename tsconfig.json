// tsconfig.json
{
  "compilerOptions": {
    "target": "ESNext", // 输出最新的 ECMAScript 版本
    "module": "ESNext", // 使用 ES 模块系统
    "moduleResolution": "node",
    "jsx": "react-jsx", // 使用新的 JSX 转换
    "declaration": true, // 生成 .d.ts 类型声明文件
    "outDir": "dist", // 主输出目录 (Rollup 会覆盖具体的 JS 文件输出)
    "rootDir": "src", // TypeScript 源文件根目录
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*"], // 包含 src 目录下的所有文件
  "exclude": ["node_modules", "dist"]
}
